{%- liquid
  assign locale_selector = false

  if section.settings.show_locale_selector and shop.enabled_locales.size > 1
    assign locale_selector = true
  endif

  assign logo_block = null
  assign menu_blocks = ''
  for block in section.blocks
    if block.type == 'logo_social'
      assign logo_block = block
    endif
  endfor
-%}

{%- style -%}
  /* KIKI Footer Default Font - Apply PP Neue Corp to ALL text */
  .footer-newsletter-section,
  .footer-newsletter-section *,
  .site-footer--kiki,
  .site-footer--kiki * {
    font-family: 'PP Neue Corp', var(--typeBasePrimary), sans-serif !important;
  }

  /* KIKI Footer Styles */
  .site-footer--kiki {
    background-color: var(--color-creme, #f8f6f1);
    color: var(--color-black, #000000);
    border-top: 1px solid var(--color-black, #000000);
    padding-top: 60px;
    padding-left: 100px;
    padding-right: 100px;
    font-family: 'PP Neue Corp', var(--typeBasePrimary), sans-serif;
  }

  .site-footer--kiki .page-width {
    padding: 0;
  }

  .site-footer--kiki a {
    color: var(--color-black, #000000);
  }

  .site-footer--kiki .footer__grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 40px;
    align-items: flex-start;
  }

  .site-footer--kiki .footer__menu-column {
    min-width: 0;
  }

  .site-footer--kiki .footer__title {
    font-family: 'PP Neue Corp', var(--typeBasePrimary), sans-serif !important;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 12px;
    color: var(--color-black, #000000);
  }

  .site-footer--kiki .site-footer__linklist {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .site-footer--kiki .site-footer__linklist a {
    font-family: 'PP Neue Corp', var(--typeBasePrimary), sans-serif !important;
    font-size: 12px;
    font-weight: 500;
    text-transform: capitalize;
    letter-spacing: 0.05em;
    display: block;
    padding: 4px 0;
    color: var(--color-black, #000000);
  }

  .site-footer--kiki .site-footer__linklist a:hover {
    opacity: 0.7;
  }

  .site-footer--kiki .footer__social-section {
    display: flex;
    align-items: flex-start;
    justify-content: space-around;
    gap: 20px;
  }

  .site-footer--kiki .footer__social-section .social-icons {
    display: flex;
    justify-content: space-around;
    gap: 20px;
    margin: 0;
    padding: 0;
    list-style: none;
    width: 100%;
  }

  .site-footer--kiki .footer__social-section .social-icons li {
    margin: 0;
  }

  .site-footer--kiki .footer__social-section .social-icons a {
    display: block;
  }

  .site-footer--kiki .footer__social-section .social-icons .icon {
    width: 24px;
    height: 24px;
  }

  .site-footer--kiki .footer__social-section .social-icons .icon path,
  .site-footer--kiki .footer__social-section .social-icons .icon {
    fill: var(--color-black, #000000);
  }

  /* Newsletter Section Wrapper */
  .footer-newsletter-section {
    background-color: var(--color-creme, #f8f6f1);
  }

  /* Newsletter Styles - KIKI Design */
  .footer-newsletter-kiki {
    text-align: center;
    padding: 52px 0;
  }

  .footer-newsletter-kiki__title {
    font-family: 'PP Neue Corp', var(--typeBasePrimary), sans-serif !important;
    font-size: 18px;
    font-weight: 500;
    letter-spacing: 3.6px;
    text-transform: uppercase;
    color: var(--color-black, #000000);
    margin: 0 0 12px 0;
  }

  .footer-newsletter-kiki__subtitle {
    font-family: 'PP Neue Corp', var(--typeBasePrimary), sans-serif !important;
    font-size: 18px;
    font-weight: 500;
    letter-spacing: 3.6px;
    color: var(--color-black, #000000);
    margin: 0 0 24px 0;
    max-width: 886px;
    margin-left: auto;
    margin-right: auto;
  }

  .footer-newsletter-kiki__form {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .footer-newsletter-kiki__input-group {
    display: flex;
    gap: 10px;
    justify-content: center;
    align-items: stretch;
  }

  .footer-newsletter-kiki__input {
    font-family: 'PP Neue Corp', var(--typeBasePrimary), sans-serif !important;
    font-size: 12px;
    font-weight: 500;
    text-transform: capitalize;
    letter-spacing: 0.05em;
    padding: 10px;
    width: 288px;
    height: 28px;
    border: 1px solid rgba(0, 0, 0, 0.2);
    background: transparent;
    color: var(--color-black, #000000);
    box-sizing: border-box;
  }

  .footer-newsletter-kiki__input::placeholder {
    color: rgba(0, 0, 0, 0.3);
  }

  .footer-newsletter-kiki__input:focus {
    outline: none;
    border-color: var(--color-black, #000000);
  }

  .footer-newsletter-kiki__btn {
    font-family: 'PP Neue Corp', var(--typeBasePrimary), sans-serif !important;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0 24px;
    height: 28px;
    border: 1px solid var(--color-black, #000000);
    background: transparent;
    color: var(--color-black, #000000);
    cursor: pointer;
    transition: background-color 0.2s, color 0.2s;
  }

  .footer-newsletter-kiki__btn:hover {
    background-color: var(--color-black, #000000);
    color: var(--color-white, #ffffff);
  }

  /* Mobile responsive */
  @media only screen and (max-width: 768px) {
    .footer-newsletter-section {
      padding: 40px 20px;
    }

    .site-footer--kiki {
      padding: 56px 20px 30px;
      border-top: 0.5px solid var(--color-black, #000000);
    }

    .site-footer--kiki .footer__grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .site-footer--kiki .footer__social-section {
      order: -1;
      justify-content: flex-start;
      padding: 10px 0;
    }

    .site-footer--kiki .footer__social-section .social-icons {
      justify-content: flex-start;
    }

    .site-footer--kiki .footer__logo-section {
      order: 999;
    }

    .site-footer--kiki .footer__title {
      font-size: 10px;
      letter-spacing: 0.1em;
    }

    .site-footer--kiki .site-footer__linklist a {
      font-size: 10px;
      letter-spacing: 0.1em;
    }

    /* Newsletter Mobile Styles */
    .footer-newsletter-kiki {
      padding: 20px 0;
      text-align: center;
    }

    .footer-newsletter-kiki__title {
      font-size: 12px;
      letter-spacing: 0.05em;
      text-transform: uppercase;
      margin-bottom: 8px;
    }

    .footer-newsletter-kiki__subtitle {
      font-size: 10px;
      letter-spacing: 0.1em;
      margin-bottom: 16px;
    }

    .footer-newsletter-kiki__input-group {
      flex-direction: row;
      gap: 8px;
      width: 100%;
      justify-content: center;
    }

    .footer-newsletter-kiki__input {
      width: 192px;
      height: 20px;
      font-size: 10px;
      padding: 0 10px;
    }

    .footer-newsletter-kiki__btn {
      width: 128px;
      height: 20px;
      font-size: 10px;
      padding: 0;
    }
  }
{%- endstyle -%}

{%- comment -%} Newsletter Section (Above Footer) {%- endcomment -%}
{%- for block in section.blocks -%}
  {%- if block.type == 'newsletter' -%}
    <div class="footer-newsletter-section" {{ block.shopify_attributes }}>
      <div class="page-width">
        {%- render 'footer-newsletter', block: block -%}
      </div>
    </div>
  {%- endif -%}
{%- endfor -%}

<footer class="site-footer site-footer--kiki" data-section-id="{{ section.id }}" data-section-type="footer">
  <div class="page-width">
    <div class="footer__grid">
      {%- comment -%} Column 1: Logo {%- endcomment -%}
      {%- if logo_block -%}
        <div class="footer__logo-section" {{ logo_block.shopify_attributes }}>
          {%- render 'footer-logo-social', block: logo_block, show_social: false -%}
        </div>
      {%- else -%}
        <div class="footer__logo-section"></div>
      {%- endif -%}

      {%- comment -%} Columns 2-4: Menu Columns {%- endcomment -%}
      {%- assign menu_count = 0 -%}
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'menu' -%}
            {%- assign menu_count = menu_count | plus: 1 -%}
            <div {{ block.shopify_attributes }} class="footer__menu-column">
              {%- render 'footer-menu', block: block -%}
            </div>
          {%- when 'custom' -%}
            {%- assign menu_count = menu_count | plus: 1 -%}
            <div {{ block.shopify_attributes }} class="footer__menu-column">
              {%- render 'footer-custom-text', block: block -%}
            </div>
          {%- when 'follow_shop_cta' -%}
            {%- assign menu_count = menu_count | plus: 1 -%}
            <div {{ block.shopify_attributes }} class="footer__menu-column">
              {%- render 'follow-shop-cta', block: block -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}

      {%- comment -%} Fill empty columns if less than 3 menus {%- endcomment -%}
      {%- if menu_count < 3 -%}
        {%- assign empty_columns = 3 | minus: menu_count -%}
        {%- for i in (1..empty_columns) -%}
          <div class="footer__menu-column"></div>
        {%- endfor -%}
      {%- endif -%}

      {%- comment -%} Column 5: Social Icons {%- endcomment -%}
      <div class="footer__social-section">
        {% render 'social-icons' %}
      </div>
    </div>
  </div>
</footer>

