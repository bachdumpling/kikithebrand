{%- comment -%}
  Hero Image Section
  A clean, full-width hero image with optional link.
  Designed for the KIKI homepage opener.
{%- endcomment -%}

{%- liquid
  assign section_height = section.settings.height | default: 943
  assign mobile_height = section.settings.mobile_height | default: 500
-%}

{% style %}
  .hero-image--{{ section.id }} {
    height: {{ section_height }}px;
  }

  @media only screen and (max-width: 749px) {
    .hero-image--{{ section.id }} {
      height: {{ mobile_height }}px;
    }
  }
{% endstyle %}

<div
  class="hero-image hero-image--{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="hero-image"
>
  {%- if section.settings.link != blank -%}
    <a
      href="{{ section.settings.link }}"
      class="hero-image__link"
      aria-label="{{ section.settings.link_label | default: 'Shop now' }}"
    >
  {%- endif -%}

  <div class="hero-image__media">
    {%- if section.settings.image != blank -%}
      {%- render 'image-element',
        img: section.settings.image,
        img_width: 2400,
        loading: section.settings.lazyload_images,
        classes: 'hero-image__img hero-image__img--desktop'
      -%}

      {%- if section.settings.image_mobile != blank -%}
        {%- render 'image-element',
          img: section.settings.image_mobile,
          img_width: 1200,
          loading: section.settings.lazyload_images,
          classes: 'hero-image__img hero-image__img--mobile'
        -%}
      {%- endif -%}
    {%- else -%}
      <div class="hero-image__placeholder">
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    {%- endif -%}
  </div>

  {%- if section.settings.link != blank -%}
    </a>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Hero Image",
  "class": "index-section--flush",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image",
      "info": "Optional. Uses desktop image if not set."
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "link_label",
      "label": "Link accessibility label",
      "default": "Shop now"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Desktop height",
      "default": 940,
      "min": 400,
      "max": 1200,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "mobile_height",
      "label": "Mobile height",
      "default": 500,
      "min": 300,
      "max": 800,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "lazyload_images",
      "label": "Lazy load image",
      "info": "Disable for above-the-fold hero images",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Hero Image"
    }
  ],
  "disabled_on": {
    "groups": ["footer", "header", "custom.popups"]
  }
}
{% endschema %}
