{%- comment -%}
  Instagram Grid Section
  5-column image grid with centered title.
  Perfect for showcasing Instagram feed or lifestyle images.
{%- endcomment -%}

{%- liquid
  assign image_height = section.settings.image_height | default: 365
  assign mobile_image_height = section.settings.mobile_image_height | default: 200
-%}

{% style %}
  .instagram-grid--{{ section.id }} .instagram-grid__images {
    height: {{ image_height }}px;
  }

  @media only screen and (max-width: 749px) {
    .instagram-grid--{{ section.id }} .instagram-grid__images {
      height: auto;
    }

    .instagram-grid--{{ section.id }} .instagram-grid__item {
      height: {{ mobile_image_height }}px;
    }
  }
{% endstyle %}

<div
  class="instagram-grid instagram-grid--{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="instagram-grid"
>
  {%- if section.settings.title != blank -%}
    <div class="instagram-grid__header">
      <h2 class="instagram-grid__title">{{ section.settings.title }}</h2>
    </div>
  {%- endif -%}

  <div class="instagram-grid__images">
    {%- for block in section.blocks -%}
      <div class="instagram-grid__item" {{ block.shopify_attributes }}>
        {%- if block.settings.link != blank -%}
          <a
            href="{{ block.settings.link }}"
            class="instagram-grid__link"
            target="_blank"
            rel="noopener"
            aria-label="View on Instagram"
          >
        {%- endif -%}

        <div class="instagram-grid__media">
          {%- if block.settings.image != blank -%}
            {%- render 'image-element',
              img: block.settings.image,
              img_width: 600,
              loading: true,
              classes: 'instagram-grid__img'
            -%}
          {%- else -%}
            <div class="instagram-grid__placeholder">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {%- endif -%}
        </div>

        {%- if block.settings.link != blank -%}
          </a>
        {%- endif -%}
      </div>
    {%- endfor -%}

    {%- comment -%} Fill remaining slots with placeholders if less than 5 blocks {%- endcomment -%}
    {%- assign remaining = 5 | minus: section.blocks.size -%}
    {%- if remaining > 0 -%}
      {%- for i in (1..remaining) -%}
        <div class="instagram-grid__item">
          <div class="instagram-grid__media">
            <div class="instagram-grid__placeholder">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          </div>
        </div>
      {%- endfor -%}
    {%- endif -%}
  </div>

  {%- if section.settings.instagram_link != blank -%}
    <div class="instagram-grid__footer">
      <a
        href="{{ section.settings.instagram_link }}"
        class="instagram-grid__follow-link"
        target="_blank"
        rel="noopener"
      >
        {{ section.settings.follow_text | default: 'Follow us on Instagram' }}
      </a>
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Instagram Grid",
  "class": "index-section",
  "max_blocks": 5,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "OUR WORLD ON INSTAGRAM"
    },
    {
      "type": "url",
      "id": "instagram_link",
      "label": "Instagram profile link"
    },
    {
      "type": "text",
      "id": "follow_text",
      "label": "Follow button text",
      "default": "Follow us on Instagram"
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "Desktop image height",
      "default": 360,
      "min": 200,
      "max": 500,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "mobile_image_height",
      "label": "Mobile image height",
      "default": 200,
      "min": 120,
      "max": 300,
      "step": 10,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional link for this image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Instagram Grid",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["footer", "header", "custom.popups"]
  }
}
{% endschema %}
